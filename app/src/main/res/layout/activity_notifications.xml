<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NotificationsActivity">
    <LinearLayout
        android:id="@+id/notificationsTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="@color/Dark_Grey"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:visibility="invisible"
            />
    </LinearLayout>
    <View
        android:id="@+id/emptyView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_YouCantSeeME"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintTop_toBottomOf="@+id/notificationsTitle2"
        />
    <LinearLayout
        android:id="@+id/llEmpty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/emptyView4"
        android:background="@color/veriWhite"
        app:layout_constraintBottom_toTopOf="@+id/emptyView3"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivNoNotifs"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/nonotifs"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvLoadingNotifs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading.."
            android:textColor="@color/Dark_Grey"/>

    </LinearLayout>
    <View
        android:id="@+id/emptyView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_YouCantSeeME"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9999999"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:id="@+id/notificationsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textColor="@color/Dark_Grey"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="18sp"
        />
    </LinearLayout>
        <View
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_YouCantSeeME"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.02"
            app:layout_constraintTop_toBottomOf="@+id/notificationsTitle"
            />




    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvNotifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emptyView"
        android:dividerHeight="0.5dp"
        android:divider="@color/post_Grey"
        />
        <View
            android:id="@+id/emptyView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_YouCantSeeME"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.02"
            app:layout_constraintTop_toBottomOf="@+id/rvNotifications"
            />


    </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="@dimen/fab"
        app:layout_constraintBottom_toBottomOf="@id/fabUpload"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/btn_color_PakatanHarapan"
        android:src="@drawable/ic_pdf"
        app:borderWidth="0dp"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="@dimen/fab"
        app:layout_constraintBottom_toBottomOf="@id/fabUpload"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/btn_color_PakatanHarapan"
        android:src="@drawable/ic_img"
        app:borderWidth="0dp"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabVid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="@dimen/fab"
        app:layout_constraintBottom_toBottomOf="@id/fabUpload"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/btn_color_PakatanHarapan"
        android:src="@drawable/ic_video"
        app:borderWidth="0dp"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabUpload"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:src="@drawable/upload"
        android:backgroundTint="@color/btn_color_PakatanHarapan"
        app:borderWidth="0dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/BiggerPadding"
        />
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:menu="@menu/bottom_nav_items"
        android:translationZ="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>