<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@color/color_YouCantSeeME"
    android:orientation="vertical"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/clChatWithFollowedUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="0dp"
            android:paddingTop="18dp"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:background="@color/veriWhite">

            <ImageView
                android:id="@+id/ivAddUserImg"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_person_add_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/tvAddUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginLeft="16dp"
                android:maxWidth="220dp"
                android:paddingLeft="5dp"
                android:scrollHorizontally="false"
                android:text="Chat with followed users"
                android:textColor="#1F2D3D"
                android:textSize="17sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ivAddUserImg"
                tools:layout_editor_absoluteY="3dp" />

        </android.support.constraint.ConstraintLayout>
        <View
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@color/post_Grey"
            app:layout_constraintTop_toBottomOf="@id/clChatWithFollowedUsers"/>

        <ListView
            android:id="@+id/lvFollowingUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="0dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/vDivider"
            android:dividerHeight="0dp"
            android:divider="@color/post_Grey"
            />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>