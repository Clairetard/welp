<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="330dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Dark_Grey"
    android:layout_gravity="center">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:src="@drawable/back_arrow_white"
            android:padding="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/ivBack"
            android:text="Edit Profile"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            app:layout_constraintTop_toTopOf="@+id/ivBack"
            app:layout_constraintBottom_toBottomOf="@+id/ivBack"
            android:textColor="@color/veriWhite"/>
        <ImageView
            android:id="@+id/ivTick"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_tick1"
            android:padding="4dp"
            app:layout_constraintRight_toRightOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:src="@drawable/dummyimg"
        app:civ_border_color="@color/notThatWhite"
        app:civ_border_width="3dp"
        app:layout_collapseMode="parallax"/>
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading.."
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:textColor="@color/notThatWhite"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="0dp"
            android:textColor="@color/profile_DarkBlue"/>
        <EditText
            android:id="@+id/etProfileDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:paddingVertical="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/profile_DarkBlue"
            android:hint="Enter New Description"
            android:textColorHint="@color/selectSubClicked"
            android:textColor="@color/veriWhite"/>
    </LinearLayout>

</LinearLayout>