<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@color/notThatWhite"
    android:elevation="@dimen/EvenBiggerPadding"
    android:padding="@dimen/BiggerPadding">
<ImageView
    android:id="@+id/iv_subjectsIMG"
    android:layout_width="@dimen/subjects_img"
    android:layout_height="@dimen/subjects_img"
    android:padding="@dimen/BiggerPadding"
    android:layout_centerHorizontal="true"
    />
    <TextView
        android:id="@+id/tv_subjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/iv_subjectsIMG"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>