<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostDetail"
    android:background="@color/nicebg"
    android:padding="24dp"
    android:id="@+id/clAddPostDetail">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
<TextView
    android:id="@+id/tv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Title"
    android:textColor="@color/the4ab5c7"
    />
<EditText
    android:id="@+id/etNoteTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/tv1"
    android:hint="Enter Title E.g. Physics Kinetics Notes Sec 3"
    android:textColorHint="@color/text_anotherSimilarColor"
    android:textSize="15sp"
    android:backgroundTint="@color/colorAccent"
    android:paddingBottom="@dimen/SlightlyBiggerPadding"
    android:textColor="@color/colorPrimaryDark"
    />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etNoteTitle"
        android:text="Description"
        android:textColor="@color/the4ab5c7"/>
    <EditText
        android:id="@+id/etNoteDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:hint="Enter topics included in resource"
        android:textColorHint="@color/text_anotherSimilarColor"
        android:textSize="15sp"
        android:backgroundTint="@color/colorAccent"
        android:paddingBottom="@dimen/SlightlyBiggerPadding"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etNoteDesc"
        android:layout_marginVertical="@dimen/EvenBiggerPadding"
        android:text="Add Tags"
        android:textColor="@color/colorPrimaryDark"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/tv3"
        app:layout_constraintBottom_toBottomOf="@id/tv3"
        app:layout_constraintLeft_toRightOf="@id/tv3"
        android:background="@color/colorAccent"
        android:layout_marginHorizontal="@dimen/BiggerPadding"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:layout_marginTop="@dimen/EvenBiggerPadding"
        android:text="Grade of Resource"
        android:textColor="@color/the4ab5c7"/>
    <Spinner
        android:id="@+id/sp_YearOfStudy"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="@dimen/SlightlyBiggerPadding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/arrow1"
        app:layout_constraintTop_toBottomOf="@+id/tv4"
        android:backgroundTint="@color/colorAccent"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:drawableRight="@drawable/ic_arrow"/>
    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sp_YearOfStudy"
        app:layout_constraintBottom_toBottomOf="@id/sp_YearOfStudy"/>
    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sp_YearOfStudy"
        android:layout_marginTop="@dimen/BiggerPadding"
        android:text="Subject"
        android:textColor="@color/the4ab5c7"/>
    <Spinner
        android:id="@+id/sp_Subject"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/SlightlyBiggerPadding"
        app:layout_constraintTop_toBottomOf="@+id/tv5"
        android:backgroundTint="@color/colorAccent"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:drawableRight="@drawable/ic_arrow"/>
    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sp_Subject"
        app:layout_constraintBottom_toBottomOf="@id/sp_Subject"/>
    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sp_Subject"
        android:layout_marginVertical="@dimen/BiggerPadding"
        android:text="Type of Resource"
        android:textColor="@color/the4ab5c7"/>
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv6"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/BiggerPadding"
        >
        <RadioButton
            android:id="@+id/rbNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notes"
            android:textColor="@color/colorPrimary"
            android:buttonTint="@color/colorPrimary"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbPractice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Practice"
            android:textColor="@color/colorPrimary"
            android:buttonTint="@color/colorPrimary"/>

        <RadioButton
            android:id="@+id/rbLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lesson"
            android:textColor="@color/colorPrimary"
            android:buttonTint="@color/colorPrimary"/>
    </RadioGroup>
    </android.support.constraint.ConstraintLayout>
    <Button
        android:id="@+id/btnPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/the4ab5c7"
        android:textColor="@color/nicebg"
        android:text="Post"
        android:textAllCaps="false"/>

</android.support.constraint.ConstraintLayout>